<div class="contents row">
  <div class="container">
    <h3>New Diary</h3>
    <%= form_with(model: @user_post, url: diaries_path, method: :post, local: true) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <p>クリックしてファイルをアップロード</p>
      <%= f.file_field :image, placeholder: "Image" %>
      <%= f.text_field :title, placeholder: "Title" %>
      <%= f.text_area :content, placeholder: "Diary", rows: "8" %>
      
      <h2>Vocabulary</h2>
      <%= f.text_field :word_name, placeholder: "Vocabulary" %>
      <%= f.text_area :example, placeholder: "Example", rows: "5" %>
      <%= f.submit "SEND" %>
    <% end %>
  </div>
</div>